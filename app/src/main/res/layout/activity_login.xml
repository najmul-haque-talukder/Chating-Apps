<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="110dp"
        android:text="Najmu"
        android:textSize="50dp"
        android:textColor="@color/Red"
        android:fontFamily="@font/liberator"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:text="late"
        android:textSize="50dp"
        android:layout_toEndOf="@+id/logo"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/ranger"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:fontFamily="@font/chikon_font"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:text="Your next Chat Partner"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:gravity="center"
        android:fontFamily="@font/rumrisin"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:fontFamily="@font/rumrisin"
        android:hint="Password"
        android:gravity="center"
        android:inputType="textVisiblePassword"
        app:passwordToggleEnabled="true"
        app:hintEnabled="true"
        app:hintAnimationEnabled="true"/>

    <Button
        android:id="@+id/login"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:layout_below="@id/password"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/ranger"
        android:layout_centerHorizontal="true"
        android:text="Log In"
        android:textSize="20dp" />

    <Button
        android:id="@+id/signup"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:text="Sign Up"
        android:fontFamily="@font/ranger"
        android:textSize="20dp"
        android:backgroundTint="@color/Red"
        android:layout_below="@id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="159dp"
        android:fontFamily="@font/chikon_font"
        android:text="Remember, Najmul is simple, Namulate is Simplest"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>